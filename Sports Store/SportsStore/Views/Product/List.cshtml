@model ProductsList

@foreach (Product product in Model.Products)
{
    <div class="card card-body bg-light my-3">
        <h3>
            <strong>@product.Name</strong>
            <span class="float-right badge badge-primary">@product.Price.ToString("C")</span>
        </h3>
        <span class="lead">@product.Description</span>
    </div>
}

<div page-action="List" page-model="@Model.PagingInfo"
     class="btn-group float-right"
     page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-light"
     page-class-selected="btn-primary"></div>