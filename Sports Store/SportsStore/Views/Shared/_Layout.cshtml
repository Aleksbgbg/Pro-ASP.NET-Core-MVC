<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sports Store</title>

    <link rel="stylesheet" asp-href-include="~/lib/bootstrap/dist/css/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*"/>
    <link rel="stylesheet" asp-href-include="~/lib/fontawesome/css/*.css"/>
</head>
<body>
    <main>
        <div class="navbar navbar-dark bg-dark" role="navigation">
            <div class="row" style="width: 100%;">
                <a class="col navbar-brand" href="#">SPORTS STORE</a>
               
                <div class="col-4 text-right">
                    @await Component.InvokeAsync("CartSummary")
                </div>
            </div>
        </div>
        
        <div class="row m-1 p-1">
            <div id="categories" class="col-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            <div class="col-8">
                @RenderBody()
            </div>
        </div>
    </main>
</body>
</html>